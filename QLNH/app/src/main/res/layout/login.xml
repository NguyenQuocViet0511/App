<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <androidx.cardview.widget.CardView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="200dp"
                app:cardCornerRadius="100dp"
                android:layout_height="200dp">
            <ImageButton
                android:background="@drawable/food_serving"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ImageButton>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <TextView
            android:fontFamily="serif"
            android:text="Chào Mừng Trở Lại !"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:fontFamily="serif"
            android:layout_marginTop="10dp"
            android:text="Đăng nhập để tiếp tục "
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <EditText
                android:fontFamily="serif"
                android:id="@+id/ed_taikhoan"
                android:hint="Nhập Tên Tài Khoản"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="15dp"
                android:inputType="text"
                android:layout_width="300dp"
                android:layout_height="50dp">

            </EditText>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <EditText
                android:fontFamily="serif"
                android:id="@+id/ed_matkhau"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:hint="Mật Khẩu"
                android:layout_width="300dp"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/key"
                android:drawableRight="@drawable/hidden"
                android:layout_centerHorizontal="true"
                android:inputType="textPassword"
                android:layout_height="50dp">

            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/ck_ghinho"
                android:layout_centerHorizontal="true"
                android:text="Ghi Nhớ"
                android:layout_width="300dp"
                android:layout_height="wrap_content">

            </CheckBox>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_dangnhap"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:text="Đăng Nhập"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="300dp"
                android:background="@color/mixgreen"
                android:layout_height="50dp">

            </androidx.appcompat.widget.AppCompatButton>
        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>